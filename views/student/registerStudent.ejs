<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Creative Student Registration</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
            background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
            position: relative;
            overflow-x: hidden;
        }

        /* Animated background elements */
        .bg-shapes {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: 1;
        }

        .shape {
            position: absolute;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.1);
        }

        .shape:nth-child(1) {
            width: 80px;
            height: 80px;
            top: 10%;
            left: 10%;
            animation: float 20s infinite linear;
        }

        .shape:nth-child(2) {
            width: 120px;
            height: 120px;
            top: 70%;
            left: 80%;
            animation: float 25s infinite linear reverse;
        }

        .shape:nth-child(3) {
            width: 60px;
            height: 60px;
            top: 20%;
            left: 85%;
            animation: float 18s infinite linear;
        }

        .shape:nth-child(4) {
            width: 100px;
            height: 100px;
            top: 80%;
            left: 15%;
            animation: float 22s infinite linear reverse;
        }

        @keyframes float {
            0% { transform: translate(0, 0) rotate(0deg); }
            100% { transform: translate(100px, 100px) rotate(360deg); }
        }

        /* Main container */
        .container {
            width: 100%;
            max-width: 500px;
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
            overflow: hidden;
            z-index: 2;
            position: relative;
            backdrop-filter: blur(10px);
        }

        /* Header section */
        .header {
            background: linear-gradient(to right, #2575fc, #6a11cb);
            color: white;
            padding: 30px 20px;
            text-align: center;
            position: relative;
        }

        .header h2 {
            font-size: 28px;
            margin-bottom: 10px;
            font-weight: 700;
            letter-spacing: 0.5px;
        }

        .header p {
            font-size: 16px;
            opacity: 0.9;
            max-width: 80%;
            margin: 0 auto;
            line-height: 1.5;
        }

        .header-icon {
            font-size: 50px;
            margin-bottom: 15px;
            color: rgba(255, 255, 255, 0.9);
        }

        /* Form styling */
        .form-container {
            padding: 30px;
        }

        .form-group {
            margin-bottom: 25px;
            position: relative;
        }

        .form-group label {
            display: flex;
            align-items: center;
            margin-bottom: 8px;
            font-weight: 600;
            color: #333;
            font-size: 15px;
        }

        .form-group label i {
            margin-right: 10px;
            color: #6a11cb;
            width: 20px;
            text-align: center;
        }

        input {
            width: 100%;
            padding: 15px 15px 15px 45px;
            border: 2px solid #e1e5ee;
            border-radius: 10px;
            font-size: 16px;
            transition: all 0.3s ease;
            background-color: #f8f9fa;
        }

        input:focus {
            outline: none;
            border-color: #6a11cb;
            box-shadow: 0 0 0 3px rgba(106, 17, 203, 0.1);
            background-color: white;
        }

        .input-icon {
            position: absolute;
            left: 15px;
            top: 40px;
            color: #6a11cb;
            font-size: 18px;
        }

        /* Button styling */
        .button-container {
            text-align: center;
            margin-top: 30px;
        }

        button {
            background: linear-gradient(to right, #2575fc, #6a11cb);
            color: white;
            border: none;
            padding: 16px 40px;
            font-size: 18px;
            font-weight: 600;
            border-radius: 50px;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 5px 15px rgba(106, 17, 203, 0.3);
            position: relative;
            overflow: hidden;
            letter-spacing: 0.5px;
        }

        button:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(106, 17, 203, 0.4);
        }

        button:active {
            transform: translateY(0);
        }

        button i {
            margin-left: 8px;
            transition: transform 0.3s ease;
        }

        button:hover i {
            transform: translateX(5px);
        }

        /* Gmail field styling */
        .gmail-field {
            background-color: #f0f7ff;
            border: 2px dashed #2575fc;
        }

        .gmail-field:focus {
            border-style: solid;
        }

        /* Responsive design */
        @media (max-width: 768px) {
            .container {
                max-width: 90%;
            }
            
            .header {
                padding: 25px 15px;
            }
            
            .header h2 {
                font-size: 24px;
            }
            
            .form-container {
                padding: 25px 20px;
            }
            
            input {
                padding: 14px 14px 14px 40px;
                font-size: 15px;
            }
            
            button {
                padding: 15px 35px;
                font-size: 17px;
                width: 100%;
            }
        }

        @media (max-width: 480px) {
            body {
                padding: 10px;
            }
            
            .container {
                max-width: 100%;
                border-radius: 15px;
            }
            
            .header {
                padding: 20px 15px;
            }
            
            .header h2 {
                font-size: 22px;
            }
            
            .header p {
                font-size: 14px;
                max-width: 95%;
            }
            
            .header-icon {
                font-size: 40px;
            }
            
            .form-container {
                padding: 20px 15px;
            }
            
            .form-group {
                margin-bottom: 20px;
            }
            
            input {
                padding: 12px 12px 12px 38px;
            }
            
            .input-icon {
                top: 35px;
                font-size: 16px;
            }
        }

        /* Animation for form elements */
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .form-group {
            animation: fadeIn 0.5s ease forwards;
            opacity: 0;
        }

        .form-group:nth-child(1) { animation-delay: 0.1s; }
        .form-group:nth-child(2) { animation-delay: 0.2s; }
        .form-group:nth-child(3) { animation-delay: 0.3s; }
        .form-group:nth-child(4) { animation-delay: 0.4s; }
        .form-group:nth-child(5) { animation-delay: 0.5s; }
        .button-container { animation-delay: 0.6s; }
    </style>
</head>
<body>
    <!-- Background shapes -->
    <div class="bg-shapes">
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
    </div>

    <!-- Main container -->
    <div class="container">
        <!-- Header section -->
        <div class="header">
            <div class="header-icon">
                <i class="fas fa-user-graduate"></i>
            </div>
            <h2>New Registration</h2>
            
        </div>

        <!-- Form section -->
        <div class="form-container">
            <form action="/student/register-and-start" method="POST">
                <!-- Hidden testId field -->
                <input type="hidden" name="testId" value="<%= testId %>">
                
                <!-- Gmail field -->
                <div class="form-group">
                    <label for="email">
                        <i class="fas fa-envelope"></i> E-Mail
                    </label>
                    <div class="input-icon">
                        <i class="fas fa-at"></i>
                    </div>
                    <input 
                        type="email" 
                        id="email"
                        name="email" 
                        value="<%= email %>" 
                        placeholder="Enter your Gmail address" 
                        required
                        class="gmail-field"
                    >
                </div>

                <!-- Full Name field -->
                <div class="form-group">
                    <label for="name">
                        <i class="fas fa-user"></i> Full Name
                    </label>
                    <div class="input-icon">
                        <i class="fas fa-signature"></i>
                    </div>
                    <input 
                        type="text" 
                        id="name"
                        name="name" 
                        placeholder="Enter your full name" 
                        required
                    >
                </div>

                <!-- Class field -->
                <div class="form-group">
                    <label for="className">
                        <i class="fas fa-school"></i>Branch / Class
                    </label>
                    <div class="input-icon">
                        <i class="fas fa-chalkboard-teacher"></i>
                    </div>
                    <input 
                        type="text" 
                        id="className"
                        name="className" 
                        placeholder="Enter your Branch / Class" 
                        required
                    >
                </div>

                <!-- Roll Number field -->
                <div class="form-group">
                    <label for="roll">
                        <i class="fas fa-id-card"></i> Roll Number
                    </label>
                    <div class="input-icon">
                        <i class="fas fa-hashtag"></i>
                    </div>
                    <input 
                        type="text" 
                        id="roll"
                        name="roll" 
                        placeholder="Enter your roll number" 
                        required
                    >
                </div>

                <!-- Parent Contact field -->
                <div class="form-group">
                    <label for="parentContact">
                        <i class="fas fa-phone-alt"></i> Contact
                    </label>
                    <div class="input-icon">
                        <i class="fas fa-mobile-alt"></i>
                    </div>
                    <input 
                        type="text" 
                        id="parentContact"
                        name="parentContact" 
                        placeholder="Enter contact number" 
                        required
                    >
                </div>

                <!-- Submit button -->
                <div class="button-container">
                    <button type="submit">
                        Start Test <i class="fas fa-arrow-right"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
        // Add some interactive effects
        document.addEventListener('DOMContentLoaded', function() {
            // Add focus effect to inputs
            const inputs = document.querySelectorAll('input');
            inputs.forEach(input => {
                // Add focus effect
                input.addEventListener('focus', function() {
                    this.parentElement.classList.add('focused');
                });
                
                // Remove focus effect
                input.addEventListener('blur', function() {
                    this.parentElement.classList.remove('focused');
                });
                
                // Add value check for styling
                input.addEventListener('input', function() {
                    if(this.value.trim() !== '') {
                        this.classList.add('has-value');
                    } else {
                        this.classList.remove('has-value');
                    }
                });
            });
            
            // Form submission animation
            const form = document.querySelector('form');
            form.addEventListener('submit', function(e) {
                const button = this.querySelector('button');
                button.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Starting Test...';
                button.disabled = true;
                
                // For demo purposes, we'll revert after 3 seconds
                // In actual implementation, this would happen on page redirect
                setTimeout(() => {
                    button.innerHTML = 'Start Test <i class="fas fa-arrow-right"></i>';
                    button.disabled = false;
                }, 3000);
            });
            
            // Add some fun hover effect to the card
            const container = document.querySelector('.container');
            container.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-5px)';
            });
            
            container.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0)';
            });
        });
    </script>
</body>
</html>