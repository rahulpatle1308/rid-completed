<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= testTitle %></title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&family=Montserrat:wght@800;900&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    :root {
      --primary-blue: #2563EB;
      --primary-dark: #1E40AF;
      --primary-light: #60A5FA;
      --secondary-teal: #0D9488;
      --secondary-light: #5EEAD4;
      --accent-purple: #7C3AED;
      --neutral-gray: #4B5563;
      --neutral-light: #F9FAFB;
      --neutral-dark: #111827;
      --success: #10B981;
      --warning: #F59E0B;
      --error: #EF4444;
      --shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
      --gradient-primary: linear-gradient(135deg, #2563EB, #1E40AF);
      --gradient-secondary: linear-gradient(135deg, #0D9488, #115E59);
      --gradient-accent: linear-gradient(135deg, #7C3AED, #5B21B6);
    }

    body {
      font-family: 'Inter', 'Poppins', sans-serif;
      background: linear-gradient(135deg, #F0F9FF 0%, #EFF6FF 100%);
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      color: var(--neutral-dark);
      padding: 20px;
      overflow-x: hidden;
      position: relative;
    }

    /* Abstract Background Elements */
    .abstract-bg {
      position: absolute;
      z-index: -1;
      opacity: 0.05;
      animation: float 25s infinite linear;
    }

    .abstract-bg:nth-child(1) {
      width: 300px;
      height: 300px;
      background: var(--gradient-primary);
      border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
      top: 5%;
      left: 5%;
    }

    .abstract-bg:nth-child(2) {
      width: 200px;
      height: 200px;
      background: var(--gradient-secondary);
      border-radius: 50% 50% 50% 50% / 60% 60% 40% 40%;
      bottom: 10%;
      right: 7%;
      animation-delay: -10s;
    }

    .container {
      max-width: 900px;
      width: 100%;
      margin: 0 auto;
      padding: 20px;
    }

    /* Header Styles */
    .header {
      text-align: center;
      margin-bottom: 50px;
      position: relative;
    }

    .header h1 {
      font-family: 'Montserrat', sans-serif;
      font-size: 3.2rem;
      font-weight: 800;
      background: var(--gradient-primary);
      -webkit-background-clip: text;
      background-clip: text;
      color: transparent;
      margin-bottom: 15px;
      line-height: 1.2;
      letter-spacing: -0.5px;
    }

    .header p {
      font-size: 1.2rem;
      color: var(--neutral-gray);
      max-width: 600px;
      margin: 0 auto;
      background: rgba(255, 255, 255, 0.7);
      padding: 20px;
      border-radius: 16px;
      box-shadow: 0 5px 15px rgba(0,0,0,0.05);
      border: 1px solid rgba(37, 99, 235, 0.1);
      font-weight: 500;
    }

    /* Main Card */
    .test-card {
      background: white;
      border-radius: 24px;
      box-shadow: var(--shadow);
      padding: 50px;
      margin-bottom: 40px;
      position: relative;
      overflow: hidden;
      transition: transform 0.4s ease, box-shadow 0.4s ease;
      border: 1px solid rgba(37, 99, 235, 0.1);
    }

    .test-card:hover {
      transform: translateY(-8px);
      box-shadow: 0 20px 40px rgba(37, 99, 235, 0.12);
    }

    .test-card:before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 6px;
      background: var(--gradient-primary);
    }

    /* Accent Corner */
    .accent-corner {
      position: absolute;
      top: 0;
      right: 0;
      width: 120px;
      height: 120px;
      background: var(--gradient-accent);
      clip-path: polygon(100% 0, 0% 100%, 100% 100%);
      z-index: 1;
      box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    .accent-corner i {
      position: absolute;
      top: 25px;
      right: 25px;
      color: white;
      font-size: 1.5rem;
      transform: rotate(45deg);
    }

    /* Test Info */
    .test-info {
      display: flex;
      flex-wrap: wrap;
      gap: 30px;
      margin-bottom: 50px;
    }

    .info-item {
      flex: 1;
      min-width: 200px;
      background: var(--neutral-light);
      padding: 30px;
      border-radius: 16px;
      display: flex;
      align-items: center;
      transition: all 0.3s ease;
      position: relative;
      border: 1px solid rgba(37, 99, 235, 0.1);
    }

    .info-item:hover {
      background: #EFF6FF;
      transform: translateY(-5px);
      border-color: var(--primary-light);
    }

    .info-icon {
      width: 70px;
      height: 70px;
      border-radius: 16px;
      background: var(--gradient-primary);
      display: flex;
      align-items: center;
      justify-content: center;
      margin-right: 25px;
      color: white;
      font-size: 28px;
      box-shadow: 0 8px 20px rgba(37, 99, 235, 0.2);
    }

    .info-content h3 {
      font-size: 0.9rem;
      color: var(--neutral-gray);
      margin-bottom: 8px;
      text-transform: uppercase;
      letter-spacing: 1.5px;
      font-weight: 600;
    }

    .info-content p {
      font-size: 1.5rem;
      font-weight: 700;
      color: var(--primary-dark);
    }

    /* Instructions */
    .instructions {
      background: linear-gradient(135deg, #F0F9FF 0%, #EFF6FF 100%);
      border-radius: 16px;
      padding: 35px;
      margin-bottom: 50px;
      border-left: 6px solid var(--secondary-teal);
      position: relative;
      border: 1px solid rgba(13, 148, 136, 0.1);
    }

    .instructions:before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 4px;
      background: linear-gradient(90deg, var(--secondary-teal), transparent);
    }

    .instructions h3 {
      font-size: 1.4rem;
      margin-bottom: 20px;
      color: var(--neutral-dark);
      display: flex;
      align-items: center;
      font-weight: 700;
    }

    .instructions h3 i {
      margin-right: 15px;
      color: var(--secondary-teal);
      font-size: 1.6rem;
    }

    .instructions ul {
      list-style-type: none;
      padding-left: 5px;
    }

    .instructions li {
      margin-bottom: 15px;
      padding-left: 35px;
      position: relative;
      line-height: 1.7;
      color: var(--neutral-gray);
    }

    .instructions li:before {
      content: 'âœ“';
      position: absolute;
      left: 0;
      color: var(--success);
      font-weight: bold;
      font-size: 1.2rem;
      background: rgba(16, 185, 129, 0.1);
      width: 26px;
      height: 26px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    /* Email Input */
    .email-input-container {
      text-align: center;
      margin-bottom: 40px;
    }

    .email-input {
      width: 80%;
      max-width: 500px;
      padding: 20px 30px;
      font-size: 1.1rem;
      border: 2px solid #E5E7EB;
      border-radius: 12px;
      background: white;
      box-shadow: 0 5px 15px rgba(0,0,0,0.05);
      transition: all 0.3s ease;
      outline: none;
      margin-bottom: 25px;
      color: var(--neutral-dark);
    }

    .email-input:focus {
      box-shadow: 0 0 0 4px rgba(37, 99, 235, 0.1);
      border-color: var(--primary-blue);
      transform: translateY(-2px);
    }

    .email-input::placeholder {
      color: #9CA3AF;
    }

    /* Start Button */
    .start-btn-container {
      text-align: center;
      position: relative;
    }

    .start-btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      background: var(--gradient-primary);
      color: white;
      border: none;
      padding: 22px 60px;
      font-size: 1.3rem;
      font-weight: 600;
      border-radius: 12px;
      cursor: pointer;
      transition: all 0.4s ease;
      box-shadow: 0 10px 25px rgba(37, 99, 235, 0.3);
      position: relative;
      overflow: hidden;
      z-index: 1;
      letter-spacing: 0.5px;
    }

    .start-btn:hover {
      transform: translateY(-3px) scale(1.02);
      box-shadow: 0 15px 35px rgba(37, 99, 235, 0.4);
    }

    .start-btn:active {
      transform: translateY(0) scale(0.98);
    }

    .start-btn i {
      margin-right: 12px;
      font-size: 1.5rem;
    }

    .start-btn::after {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: var(--gradient-secondary);
      z-index: -1;
      border-radius: 12px;
      opacity: 0;
      transition: opacity 0.4s ease;
    }

    .start-btn:hover::after {
      opacity: 1;
    }

    .btn-pulse {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 100%;
      height: 100%;
      border-radius: 12px;
      background: var(--gradient-primary);
      z-index: -1;
      animation: pulse 2s infinite;
    }

    /* Countdown Timer */
    .countdown {
      text-align: center;
      margin-top: 30px;
      font-size: 1.1rem;
      color: var(--neutral-gray);
      background: rgba(255, 255, 255, 0.7);
      padding: 20px;
      border-radius: 12px;
      display: inline-block;
      margin-left: auto;
      margin-right: auto;
      border: 1px solid rgba(37, 99, 235, 0.1);
    }

    .countdown span {
      font-weight: 700;
      color: var(--primary-dark);
      background: #EFF6FF;
      padding: 8px 16px;
      border-radius: 8px;
      margin: 0 5px;
    }

    /* Footer */
    .footer {
      text-align: center;
      margin-top: 40px;
      color: var(--neutral-gray);
      font-size: 0.95rem;
      padding: 25px;
      background: white;
      border-radius: 16px;
      width: 100%;
      max-width: 600px;
      border: 1px solid rgba(37, 99, 235, 0.1);
    }

    .footer a {
      color: var(--primary-blue);
      text-decoration: none;
      font-weight: 600;
      transition: all 0.3s;
      padding: 5px 10px;
      border-radius: 6px;
    }

    .footer a:hover {
      background: #EFF6FF;
      color: var(--primary-dark);
    }

    /* Animations */
    @keyframes pulse {
      0% {
        transform: translate(-50%, -50%) scale(1);
        opacity: 0.8;
      }
      100% {
        transform: translate(-50%, -50%) scale(1.1);
        opacity: 0;
      }
    }

    @keyframes float {
      0% {
        transform: translateY(0) rotate(0deg);
      }
      50% {
        transform: translateY(-20px) rotate(180deg);
      }
      100% {
        transform: translateY(0) rotate(360deg);
      }
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .header h1 {
        font-size: 2.5rem;
      }
      
      .test-card {
        padding: 35px 25px;
      }
      
      .info-item {
        min-width: 100%;
        padding: 25px;
      }
      
      .start-btn {
        padding: 20px 45px;
        font-size: 1.2rem;
      }
      
      .email-input {
        width: 95%;
        padding: 18px 25px;
      }
      
      .instructions {
        padding: 25px;
      }
    }

    @media (max-width: 480px) {
      .header h1 {
        font-size: 2rem;
      }
      
      .header p {
        font-size: 1rem;
        padding: 15px;
      }
      
      .test-info {
        gap: 20px;
      }
      
      .info-item {
        padding: 20px;
      }
      
      .info-icon {
        width: 60px;
        height: 60px;
        font-size: 24px;
        margin-right: 20px;
      }
      
      .instructions li {
        padding-left: 30px;
      }
      
      .countdown {
        font-size: 1rem;
        padding: 15px;
      }
      
      .footer {
        padding: 20px;
      }
    }

    @media (min-width: 1200px) {
      .container {
        max-width: 1000px;
      }
      
      .test-card {
        padding: 60px;
      }
    }
  </style>
</head>
<body>
  <!-- Abstract Background Elements -->
  <div class="abstract-bg"></div>
  <div class="abstract-bg"></div>
  
  <div class="container">
    <div class="header">
      <h1> Test:  <%= testTitle %></h1>
      
    </div>

    <div class="test-card">
      <div class="accent-corner">
        <i class="fas fa-graduation-cap"></i>
      </div>
      
      <div class="test-info">
        <div class="info-item">
          <div class="info-icon">
            <i class="far fa-clock"></i>
          </div>
          <div class="info-content">
            <h3>Duration</h3>
            <p><%= duration %> minutes</p>
          </div>
        </div>

        <div class="info-item">
          <div class="info-icon">
            <i class="far fa-question-circle"></i>
          </div>
          <div class="info-content">
            <h3>Question Type</h3>
            <p>Multiple Choice</p>
          </div>
        </div>

        <div class="info-item">
          <div class="info-icon">
            <i class="far fa-star"></i>
          </div>
          <div class="info-content">
            <h3>Difficulty</h3>
            <p>Intermediate</p>
          </div>
        </div>
      </div>

      <form action="/student/check-email" method="POST" class="email-input-container">
        <input type="hidden" name="testId" value="<%= testId %>">
        
        <input 
          type="email"
          name="email"
          placeholder="Enter your professional email to begin"
          required
          class="email-input"
        >
        
        <div class="start-btn-container">
          <div class="btn-pulse"></div>
          <button type="submit" class="start-btn">
            <i class="fas fa-play-circle"></i> Start Test
          </button>
          
          
        </div>
      </form>
      
      <div class="instructions">
        <h3><i class="fas fa-info-circle"></i> Assessment Guidelines</h3>
        <ul>
          <li>Ensure you have a stable internet connection throughout the assessment.</li>
          <li>This assessment has a time limit of <%= duration %> minutes. Timer will start once you begin.</li>
          <li>Each question has only one correct answer.</li>
          <li>You cannot go back to previous questions once answered.</li>
          <li>Do not refresh the page during the assessment as it may cause loss of progress.</li>
          <li>Your assessment will be automatically submitted when the time expires.</li>
        </ul>
      </div>
    </div>

    <div class="footer">
      <p>Good luck! We recommend reviewing the guidelines before starting. <br> 
      Need assistance? <a href="#">Contact support</a> | <a href="#">View detailed instructions</a></p>
      <p style="margin-top: 15px; font-size: 0.85rem; color: var(--neutral-gray);">
        <i class="fas fa-shield-alt" style="color: var(--primary-blue); margin-right: 5px;"></i>
        Your data is secured with enterprise-grade encryption
      </p>
    </div>
  </div>

  <script>
    // Professional interactive animations
    document.addEventListener('DOMContentLoaded', function() {
      // Button click effect
      const startBtn = document.querySelector('.start-btn');
      startBtn.addEventListener('click', function(e) {
        // Create ripple effect
        const ripple = document.createElement('span');
        const rect = this.getBoundingClientRect();
        const size = Math.max(rect.width, rect.height);
        const x = e.clientX - rect.left - size / 2;
        const y = e.clientY - rect.top - size / 2;
        
        ripple.style.cssText = `
          position: absolute;
          border-radius: 50%;
          background: rgba(255, 255, 255, 0.7);
          transform: scale(0);
          animation: ripple-animation 0.6s linear;
          width: ${size}px;
          height: ${size}px;
          top: ${y}px;
          left: ${x}px;
          z-index: 0;
        `;
        
        this.appendChild(ripple);
        
        // Remove ripple element after animation
        setTimeout(() => {
          ripple.remove();
        }, 600);
      });

      // Animate info items on load with staggered delay
      const infoItems = document.querySelectorAll('.info-item');
      infoItems.forEach((item, index) => {
        item.style.opacity = '0';
        item.style.transform = 'translateY(20px)';
        
        setTimeout(() => {
          item.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
          item.style.opacity = '1';
          item.style.transform = 'translateY(0)';
        }, 300 + (index * 200));
      });

      // Add professional greeting based on time of day
      const hour = new Date().getHours();
      const greeting = document.createElement('div');
      greeting.style.marginTop = '20px';
      greeting.style.padding = '15px';
      greeting.style.background = 'linear-gradient(135deg, rgba(37, 99, 235, 0.05), rgba(13, 148, 136, 0.05))';
      greeting.style.borderRadius = '12px';
      greeting.style.border = '1px solid rgba(37, 99, 235, 0.1)';
      greeting.style.color = 'var(--neutral-gray)';
      greeting.style.fontWeight = '500';
      greeting.style.fontSize = '1rem';
      
      if (hour < 12) {
        greeting.innerHTML = '<i class="fas fa-sun" style="color: var(--warning); margin-right: 10px;"></i> Good morning! Best of Luck ! ðŸ’šðŸ’š.';
      } else if (hour < 18) {
        greeting.innerHTML = '<i class="fas fa-sun" style="color: var(--warning); margin-right: 10px;"></i> Good afternoon! Best of Luck ! ðŸ’šðŸ’š.';
      } else {
        greeting.innerHTML = '<i class="fas fa-moon" style="color: var(--accent-purple); margin-right: 10px;"></i> Good evening! Best of Luck ! ðŸ’šðŸ’š.';
      }
      
      document.querySelector('.header').appendChild(greeting);

      // Add subtle floating particles
      const colors = ['rgba(37, 99, 235, 0.05)', 'rgba(13, 148, 136, 0.05)', 'rgba(124, 58, 237, 0.05)'];
      
      for (let i = 0; i < 8; i++) {
        const particle = document.createElement('div');
        particle.style.position = 'fixed';
        particle.style.width = Math.random() * 15 + 5 + 'px';
        particle.style.height = particle.style.width;
        particle.style.background = colors[Math.floor(Math.random() * colors.length)];
        particle.style.borderRadius = '50%';
        particle.style.left = Math.random() * 100 + 'vw';
        particle.style.top = Math.random() * 100 + 'vh';
        particle.style.zIndex = '-1';
        particle.style.animation = `float ${Math.random() * 20 + 20}s infinite linear`;
        document.body.appendChild(particle);
      }

      // Add focus effect to email input
      const emailInput = document.querySelector('.email-input');
      emailInput.addEventListener('focus', function() {
        this.style.background = '#FFFFFF';
        this.parentElement.style.transform = 'scale(1.01)';
        this.parentElement.style.transition = 'transform 0.3s ease';
      });
      
      emailInput.addEventListener('blur', function() {
        this.style.background = 'white';
        this.parentElement.style.transform = 'scale(1)';
      });
    });

    // CSS for ripple animation
    const style = document.createElement('style');
    style.textContent = `
      @keyframes ripple-animation {
        to {
          transform: scale(4);
          opacity: 0;
        }
      }
    `;
    document.head.appendChild(style);
  </script>
</body>
</html>