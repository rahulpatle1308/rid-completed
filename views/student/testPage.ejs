<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= testTitle %></title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Montserrat:wght@800;900&display=swap" rel="stylesheet">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    :root {
      --primary: #4361ee;
      --secondary: #3a0ca3;
      --accent: #4cc9f0;
      --light: #f8f9fa;
      --dark: #212529;
      --success: #4ade80;
      --warning: #f59e0b;
      --shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
      --gradient: linear-gradient(135deg, #4361ee, #3a0ca3);
    }

    body {
      font-family: 'Poppins', sans-serif;
      background: linear-gradient(135deg, #f5f7fa 0%, #e4edf5 100%);
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      color: var(--dark);
      padding: 20px;
      overflow-x: hidden;
    }

    .container {
      max-width: 900px;
      width: 100%;
      margin: 0 auto;
      padding: 20px;
    }

    /* Header Styles */
    .header {
      text-align: center;
      margin-bottom: 40px;
      position: relative;
    }

    .header h1 {
      font-family: 'Montserrat', sans-serif;
      font-size: 3.2rem;
      font-weight: 900;
      background: var(--gradient);
      -webkit-background-clip: text;
      background-clip: text;
      color: transparent;
      margin-bottom: 10px;
      line-height: 1.2;
    }

    .header p {
      font-size: 1.1rem;
      color: #64748b;
      max-width: 600px;
      margin: 0 auto;
    }

    /* Main Card */
    .test-card {
      background: white;
      border-radius: 24px;
      box-shadow: var(--shadow);
      padding: 40px;
      margin-bottom: 40px;
      position: relative;
      overflow: hidden;
      transition: transform 0.4s ease;
    }

    .test-card:hover {
      transform: translateY(-8px);
      box-shadow: 0 15px 40px rgba(67, 97, 238, 0.15);
    }

    .test-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 6px;
      background: var(--gradient);
    }

    /* Test Info */
    .test-info {
      display: flex;
      flex-wrap: wrap;
      gap: 30px;
      margin-bottom: 40px;
    }

    .info-item {
      flex: 1;
      min-width: 200px;
      background: #f8fafc;
      padding: 25px;
      border-radius: 16px;
      display: flex;
      align-items: center;
      transition: all 0.3s ease;
    }

    .info-item:hover {
      background: #f1f5f9;
      transform: translateY(-5px);
    }

    .info-icon {
      width: 60px;
      height: 60px;
      border-radius: 12px;
      background: var(--gradient);
      display: flex;
      align-items: center;
      justify-content: center;
      margin-right: 20px;
      color: white;
      font-size: 24px;
    }

    .info-content h3 {
      font-size: 1rem;
      color: #64748b;
      margin-bottom: 5px;
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    .info-content p {
      font-size: 1.5rem;
      font-weight: 600;
      color: var(--primary);
    }

    /* Instructions */
    .instructions {
      background: #f0f9ff;
      border-radius: 16px;
      padding: 25px;
      margin-bottom: 40px;
      border-left: 5px solid var(--accent);
    }

    .instructions h3 {
      font-size: 1.3rem;
      margin-bottom: 15px;
      color: var(--secondary);
      display: flex;
      align-items: center;
    }

    .instructions h3 i {
      margin-right: 10px;
      color: var(--accent);
    }

    .instructions ul {
      list-style-type: none;
      padding-left: 5px;
    }

    .instructions li {
      margin-bottom: 10px;
      padding-left: 30px;
      position: relative;
    }

    .instructions li:before {
      content: '✓';
      position: absolute;
      left: 0;
      color: var(--success);
      font-weight: bold;
    }

    /* Start Button */
    .start-btn-container {
      text-align: center;
      position: relative;
    }

    .start-btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      background: var(--gradient);
      color: white;
      border: none;
      padding: 22px 50px;
      font-size: 1.4rem;
      font-weight: 600;
      border-radius: 60px;
      cursor: pointer;
      transition: all 0.4s ease;
      box-shadow: 0 8px 25px rgba(67, 97, 238, 0.4);
      position: relative;
      overflow: hidden;
      z-index: 1;
    }

    .start-btn:hover {
      transform: scale(1.05);
      box-shadow: 0 12px 35px rgba(67, 97, 238, 0.5);
    }

    .start-btn:active {
      transform: scale(0.98);
    }

    .start-btn i {
      margin-right: 12px;
      font-size: 1.6rem;
    }

    .start-btn::after {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(135deg, #3a0ca3, #7209b7);
      z-index: -1;
      border-radius: 60px;
      opacity: 0;
      transition: opacity 0.4s ease;
    }

    .start-btn:hover::after {
      opacity: 1;
    }

    .btn-pulse {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 100%;
      height: 100%;
      border-radius: 60px;
      background: var(--gradient);
      z-index: -1;
      animation: pulse 2s infinite;
    }

    @keyframes pulse {
      0% {
        transform: translate(-50%, -50%) scale(1);
        opacity: 0.8;
      }
      100% {
        transform: translate(-50%, -50%) scale(1.1);
        opacity: 0;
      }
    }

    /* Decorative Elements */
    .decoration {
      position: absolute;
      z-index: -1;
    }

    .circle-1 {
      width: 300px;
      height: 300px;
      background: linear-gradient(135deg, rgba(67, 97, 238, 0.1), rgba(58, 12, 163, 0.05));
      border-radius: 50%;
      top: -150px;
      right: -150px;
    }

    .circle-2 {
      width: 200px;
      height: 200px;
      background: linear-gradient(135deg, rgba(76, 201, 240, 0.1), rgba(67, 97, 238, 0.05));
      border-radius: 50%;
      bottom: -100px;
      left: -100px;
    }

    .shape-1 {
      width: 80px;
      height: 80px;
      background: rgba(76, 201, 240, 0.15);
      border-radius: 20px;
      top: 40px;
      left: 5%;
      transform: rotate(45deg);
    }

    .shape-2 {
      width: 60px;
      height: 60px;
      background: rgba(67, 97, 238, 0.1);
      border-radius: 50%;
      bottom: 80px;
      right: 10%;
    }

    /* Countdown Timer */
    .countdown {
      text-align: center;
      margin-top: 20px;
      font-size: 1.1rem;
      color: #64748b;
    }

    .countdown span {
      font-weight: 600;
      color: var(--primary);
    }

    /* Footer */
    .footer {
      text-align: center;
      margin-top: 40px;
      color: #94a3b8;
      font-size: 0.9rem;
    }

    .footer a {
      color: var(--primary);
      text-decoration: none;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .header h1 {
        font-size: 2.5rem;
      }

      .test-card {
        padding: 30px 20px;
      }

      .info-item {
        min-width: 100%;
      }

      .start-btn {
        padding: 18px 40px;
        font-size: 1.2rem;
      }
    }

    @media (max-width: 480px) {
      .header h1 {
        font-size: 2rem;
      }

      .test-info {
        gap: 15px;
      }

      .info-item {
        padding: 20px;
      }

      .instructions {
        padding: 20px;
      }
    }
  </style>
</head>
<body>
  <div class="decoration circle-1"></div>
  <div class="decoration circle-2"></div>
  <div class="decoration shape-1"></div>
  <div class="decoration shape-2"></div>

  <div class="container">
    <div class="header">
      <h1><%= testTitle %></h1>
      <p>Get ready to showcase your knowledge and skills. This test is designed to challenge and inspire you!</p>
    </div>

    <div class="test-card">
      <div class="test-info">
        <div class="info-item">
          <div class="info-icon">
            <i class="far fa-clock"></i>
          </div>
          <div class="info-content">
            <h3>Duration</h3>
            <p><%= duration %> minutes</p>
          </div>
        </div>

        <div class="info-item">
          <div class="info-icon">
            <i class="far fa-question-circle"></i>
          </div>
          <div class="info-content">
            <h3>Question Type</h3>
            <p>Multiple Choice</p>
          </div>
        </div>

        <div class="info-item">
          <div class="info-icon">
            <i class="far fa-star"></i>
          </div>
          <div class="info-content">
            <h3>Difficulty</h3>
            <p>Intermediate</p>
          </div>
        </div>
      </div>

      <div class="instructions">
        <h3><i class="fas fa-info-circle"></i> Important Instructions</h3>
        <ul>
          <li>Ensure you have a stable internet connection throughout the test.</li>
          <li>This test has a time limit of <%= duration %> minutes. Timer will start once you begin.</li>
          <li>Each question has only one correct answer.</li>
          <li>You cannot go back to previous questions once answered.</li>
          <li>Do not refresh the page during the test as it may cause loss of progress.</li>
          <li>Your test will be automatically submitted when the time expires.</li>
        </ul>
      </div>

      <div class="start-btn-container">
        <div class="btn-pulse"></div>
        <form action="/student/check-email" method="POST">
  <input type="hidden" name="testId" value="<%= testId %>">

  <!-- ✅ EMAIL INPUT ADD -->
  <input 
    type="email"
    name="email"
    placeholder="Enter your Gmail to start test"
    required
    style="
      padding:12px;
      width:60%;
      border-radius:8px;
      border:1px solid #ccc;
      margin-bottom:15px;
      text-align:center;
    "
  >
  <br>

  <button type="submit" class="start-btn">
    <i class="fas fa-play-circle"></i> Continue
  </button>
</form>


        <div class="countdown">
          <p>Recommended completion: Within <span><%= duration %> minutes</span></p>
        </div>
      </div>
    </div>

    <div class="footer">
      <p>Good luck! You've prepared well for this. <br> 
      Need help? <a href="#">Contact support</a> | <a href="#">View test guidelines</a></p>
    </div>
  </div>

  <script>
    // Add interactive animations
    document.addEventListener('DOMContentLoaded', function() {
      // Button click effect
      const startBtn = document.querySelector('.start-btn');
      startBtn.addEventListener('click', function(e) {
        // Create ripple effect
        const ripple = document.createElement('span');
        const rect = this.getBoundingClientRect();
        const size = Math.max(rect.width, rect.height);
        const x = e.clientX - rect.left - size / 2;
        const y = e.clientY - rect.top - size / 2;
        
        ripple.style.cssText = `
          position: absolute;
          border-radius: 50%;
          background: rgba(255, 255, 255, 0.7);
          transform: scale(0);
          animation: ripple-animation 0.6s linear;
          width: ${size}px;
          height: ${size}px;
          top: ${y}px;
          left: ${x}px;
        `;
        
        this.appendChild(ripple);
        
        // Remove ripple element after animation
        setTimeout(() => {
          ripple.remove();
        }, 600);
      });

      // Animate info items on load
      const infoItems = document.querySelectorAll('.info-item');
      infoItems.forEach((item, index) => {
        item.style.opacity = '0';
        item.style.transform = 'translateY(20px)';
        
        setTimeout(() => {
          item.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
          item.style.opacity = '1';
          item.style.transform = 'translateY(0)';
        }, 300 + (index * 200));
      });

      // Add motivational message based on time of day
      const hour = new Date().getHours();
      const greeting = document.createElement('p');
      greeting.style.marginTop = '10px';
      greeting.style.fontStyle = 'italic';
      greeting.style.color = '#64748b';
      
      if (hour < 12) {
        greeting.textContent = "Good morning! Ready to ace this test?";
      } else if (hour < 18) {
        greeting.textContent = "Good afternoon! Let's do this!";
      } else {
        greeting.textContent = "Good evening! Time to shine!";
      }
      
      document.querySelector('.header').appendChild(greeting);
    });

    // CSS for ripple animation
    const style = document.createElement('style');
    style.textContent = `
      @keyframes ripple-animation {
        to {
          transform: scale(4);
          opacity: 0;
        }
      }
    `;
    document.head.appendChild(style);
  </script>
</body>
</html>