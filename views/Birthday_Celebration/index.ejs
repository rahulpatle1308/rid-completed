            if (e.key === 'Enter' || e.key === ' ') {
                e.preventDefault();
                openLetterPopup(e);
            }
        });

        function openLetterPopup(e) {
            letterPopup.classList.add('active');
            document.body.style.overflow = 'hidden';

            // Create celebration effect
            createHeartBurst(30,
                e.clientX || window.innerWidth / 2,
                e.clientY || window.innerHeight / 2
            );

            // Add floating hearts
            setTimeout(() => {
                createHeartBurst(15,
                    window.innerWidth / 2,
                    window.innerHeight / 2
                );
            }, 300);
        }

        // Close letter popup
        closePopupBtn.addEventListener('click', function () {
            letterPopup.classList.remove('active');
            document.body.style.overflow = 'auto';

            // Create closing effect
            createHeartBurst(10,
                this.getBoundingClientRect().left + this.offsetWidth / 2,
                this.getBoundingClientRect().top + this.offsetHeight / 2
            );
        });

        // Close popup when clicking outside content
        letterPopup.addEventListener('click', function (e) {
            if (e.target === this) {
                letterPopup.classList.remove('active');
                document.body.style.overflow = 'auto';
            }
        });

        // Close popup with Escape key
        document.addEventListener('keydown', function (e) {
            if (e.key === 'Escape' && letterPopup.classList.contains('active')) {
                letterPopup.classList.remove('active');
                document.body.style.overflow = 'auto';
            }
        });

        // Create heart burst animation
        function createHeartBurst(count, originX, originY) {
            const hearts = ['‚ù§', 'üíñ', 'üíï', 'üíó', 'üíì', 'üíû'];

            for (let i = 0; i < count; i++) {
                setTimeout(() => {
                    const heart = document.createElement('div');
                    heart.innerHTML = hearts[Math.floor(Math.random() * hearts.length)];
                    heart.style.position = 'fixed';
                    heart.style.left = `${originX}px`;
                    heart.style.top = `${originY}px`;
                    heart.style.fontSize = `${20 + Math.random() * 30}px`;
                    heart.style.color = `hsl(${Math.random() * 360}, 100%, 70%)`;
                    heart.style.pointerEvents = 'none';
                    heart.style.zIndex = '1000';
                    heart.style.opacity = '0.8';
                    heart.style.textShadow = '0 0 10px currentColor';

                    document.body.appendChild(heart);

                    // Random movement
                    const angle = Math.random() * Math.PI * 2;
                    const distance = 100 + Math.random() * 200;
                    const duration = 1000 + Math.random() * 1000;

                    const animation = heart.animate([
                        {
                            transform: 'translate(0, 0) scale(1)',
                            opacity: 0.8
                        },
                        {
                            transform: `translate(${Math.cos(angle) * distance}px, ${Math.sin(angle) * distance}px) scale(1.5)`,
                            opacity: 0
                        }
                    ], {
                        duration: duration,
                        easing: 'cubic-bezier(0.215, 0.610, 0.355, 1)'
                    });

                    animation.onfinish = () => heart.remove();
                }, i * 50);
            }
        }

        // Toggle mobile menu
        function toggleMenu() {
            isMenuOpen = !isMenuOpen;

            if (isMenuOpen) {
                navMenu.classList.add('active');
                menuOverlay.classList.add('active');
                hamburger.innerHTML = '<i class="fas fa-times"></i>';
                hamburger.setAttribute('aria-expanded', 'true');
                document.body.classList.add('menu-open');
                hamburger.style.background = 'rgba(255, 102, 204, 0.3)';
            } else {
                navMenu.classList.remove('active');
                menuOverlay.classList.remove('active');
                hamburger.innerHTML = '<i class="fas fa-bars"></i>';
                hamburger.setAttribute('aria-expanded', 'false');
                document.body.classList.remove('menu-open');
                hamburger.style.background = 'rgba(255, 102, 204, 0.1)';
            }
        }

        // Close menu when clicking on overlay or link
        menuOverlay.addEventListener('click', toggleMenu);

        navLinks.forEach(link => {
            link.addEventListener('click', () => {
                if (isMenuOpen) {
                    toggleMenu();
                }
            });
        });

        // Close menu with Escape key
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape' && isMenuOpen) {
                toggleMenu();
            }
        });

        // Handle window resize
        function handleResize() {
            if (window.innerWidth > 768 && isMenuOpen) {
                toggleMenu();
            }
            
            // Recreate background elements for new screen size
            heartBg.innerHTML = '';
            roseContainer.innerHTML = '';
            createFloatingHearts();
            createFloatingRoses();
        }

        // Initialize
        window.addEventListener('load', () => {
            createStars();
            createFloatingHearts();
            createMagicDust();
            createFloatingRoses();
            animateLoveMeter();
            updateCountdown();

            // Update countdown every second
            setInterval(updateCountdown, 1000);

            // Replenish floating elements periodically
            setInterval(() => {
                createFloatingHearts();
                createFloatingRoses();
            }, 10000);

            // Auto-open letter after 3 seconds
            setTimeout(() => {
                loveLetter.classList.add('open');
                createHeartBurst(15,
                    loveLetter.getBoundingClientRect().left + loveLetter.offsetWidth / 2,
                    loveLetter.getBoundingClientRect().top + loveLetter.offsetHeight / 2
                );
            }, 3000);

            // Hamburger event listener
            hamburger.addEventListener('click', (e) => {
                e.stopPropagation();
                toggleMenu();
            });

            // Touch support for hamburger
            hamburger.addEventListener('touchstart', (e) => {
                e.stopPropagation();
            });

            // Prevent body scroll when menu is open
            document.addEventListener('touchmove', (e) => {
                if (isMenuOpen) {
                    e.preventDefault();
                }
            }, { passive: false });

            // Handle window resize
            window.addEventListener('resize', handleResize);
        });

        // Add smooth transitions for all elements
        document.addEventListener('DOMContentLoaded', () => {
            const style = document.createElement('style');
            style.textContent = `
                @keyframes sparkleFlash {
                    0%, 100% { opacity: 0; transform: scale(0); }
                    50% { opacity: 1; transform: scale(1); }
                }
                
                /* Smooth transitions */
                * {
                    transition: all 0.3s ease;
                }
            `;
            document.head.appendChild(style);
        });
