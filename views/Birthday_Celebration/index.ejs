    <script>
        // DOM Elements
        const hamburger = document.getElementById('hamburger');
        const navMenu = document.getElementById('navMenu');
        const menuOverlay = document.getElementById('menuOverlay');
        const navLinks = document.querySelectorAll('.nav-link');
        const loveLetter = document.getElementById('loveLetter');
        const heartBg = document.getElementById('heartBg');
        const magicDust = document.getElementById('magicDust');
        const roseContainer = document.getElementById('roseContainer');
        const starsContainer = document.getElementById('stars');
        const loveFill = document.getElementById('loveFill');
        const countdownDays = document.getElementById('days');
        const countdownHours = document.getElementById('hours');
        const countdownMinutes = document.getElementById('minutes');
        const countdownSeconds = document.getElementById('seconds');

        // Letter Popup Elements
        const letterPopup = document.getElementById('letterPopup');
        const openLetterTrigger = document.getElementById('openLetterTrigger');
        const closePopupBtn = document.getElementById('closePopupBtn');

        // State variables
        let isMenuOpen = false;
        let touchStartX = 0;
        let touchStartY = 0;

        // Create stars background
        function createStars() {
            const starCount = window.innerWidth < 768 ? 150 : 300;

            for (let i = 0; i < starCount; i++) {
                const star = document.createElement('div');
                star.classList.add('star');

                const size = Math.random() * 3;
                const left = Math.random() * 100;
                const top = Math.random() * 100;
                const opacity = 0.2 + Math.random() * 0.8;
                const twinkleDelay = Math.random() * 5;

                star.style.width = `${size}px`;
                star.style.height = `${size}px`;
                star.style.left = `${left}%`;
                star.style.top = `${top}%`;
                star.style.opacity = opacity;
                star.style.animationDelay = `${twinkleDelay}s`;

                starsContainer.appendChild(star);
            }
        }

        // Create floating hearts
        function createFloatingHearts() {
            const heartCount = window.innerWidth < 768 ? 25 : 50;
            const hearts = ['‚ù§', 'üíñ', 'üíï', 'üíó', 'üíì', 'üíû', 'üíò', 'üíù'];

            for (let i = 0; i < heartCount; i++) {
                setTimeout(() => {
                    const heart = document.createElement('div');
                    heart.classList.add('heart-particle');
                    heart.innerHTML = hearts[Math.floor(Math.random() * hearts.length)];

                    const size = window.innerWidth < 768 ? 15 + Math.random() * 20 : 20 + Math.random() * 40;
                    const left = Math.random() * 100;
                    const duration = 15 + Math.random() * 20;
                    const delay = Math.random() * 5;
                    const color = `hsl(${Math.random() * 360}, 100%, 70%)`;

                    heart.style.left = `${left}%`;
                    heart.style.fontSize = `${size}px`;
                    heart.style.color = color;
                    heart.style.animationDelay = `${delay}s`;
                    heart.style.animationDuration = `${duration}s`;

                    heartBg.appendChild(heart);

                    // Remove heart after animation
                    setTimeout(() => {
                        if (heart.parentNode) {
                            heart.remove();
                        }
                    }, (duration + delay) * 1000);
                }, i * 300);
            }
        }

        // Create magic dust particles
        function createMagicDust() {
            const dustCount = window.innerWidth < 768 ? 50 : 100;

            for (let i = 0; i < dustCount; i++) {
                const dust = document.createElement('div');
                dust.classList.add('dust-particle');

                const left = Math.random() * 100;
                const top = Math.random() * 100;
                const delay = Math.random() * 5;
                const duration = 2 + Math.random() * 3;
                const size = 2 + Math.random() * 4;

                dust.style.left = `${left}%`;
                dust.style.top = `${top}%`;
                dust.style.width = `${size}px`;
                dust.style.height = `${size}px`;
                dust.style.animation = `sparkleFlash ${duration}s infinite ${delay}s`;

                magicDust.appendChild(dust);
            }
        }

        // Create floating roses
        function createFloatingRoses() {
            const roseCount = window.innerWidth < 768 ? 10 : 20;

            for (let i = 0; i < roseCount; i++) {
                setTimeout(() => {
                    const rose = document.createElement('div');
                    rose.classList.add('floating-rose');
                    rose.innerHTML = 'üåπ';

                    const left = Math.random() * 100;
                    const duration = 20 + Math.random() * 20;
                    const delay = Math.random() * 10;
                    const size = window.innerWidth < 768 ? 25 + Math.random() * 30 : 30 + Math.random() * 50;

                    rose.style.left = `${left}%`;
                    rose.style.fontSize = `${size}px`;
                    rose.style.animationDelay = `${delay}s`;
                    rose.style.animationDuration = `${duration}s`;

                    roseContainer.appendChild(rose);

                    // Remove rose after animation
                    setTimeout(() => {
                        if (rose.parentNode) {
                            rose.remove();
                        }
                    }, (duration + delay) * 1000);
                }, i * 1000);
            }
        }

        // Update love meter animation
        function animateLoveMeter() {
            let width = 95;
            const interval = setInterval(() => {
                width = width === 95 ? 100 : 95;
                if (loveFill) loveFill.style.width = `${width}%`;
            }, 2000);
        }

        // Update countdown timer
        function updateCountdown() {
            const now = new Date();
            const nextAnniversary = new Date(now.getFullYear() + 1, 0, 1);

            const diff = nextAnniversary - now;

            const days = Math.floor(diff / (1000 * 60 * 60 * 24));
            const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((diff % (1000 * 60)) / 1000);

            if (countdownDays) countdownDays.textContent = days.toString().padStart(2, '0');
            if (countdownHours) countdownHours.textContent = hours.toString().padStart(2, '0');
            if (countdownMinutes) countdownMinutes.textContent = minutes.toString().padStart(2, '0');
            if (countdownSeconds) countdownSeconds.textContent = seconds.toString().padStart(2, '0');
        }

        // Handle love letter click
        loveLetter.addEventListener('click', function () {
            this.classList.toggle('open');

            // Create heart burst effect
            if (this.classList.contains('open')) {
                createHeartBurst(20,
                    this.getBoundingClientRect().left + this.offsetWidth / 2,
                    this.getBoundingClientRect().top + this.offsetHeight / 2
                );

                // Add more floating hearts
                for (let i = 0; i < 10; i++) {
                    setTimeout(() => {
                        createHeartBurst(5,
                            this.getBoundingClientRect().left + this.offsetWidth / 2,
                            this.getBoundingClientRect().top + this.offsetHeight / 2
                        );
                    }, i * 200);
                }
            }
        });

        // Touch support for love letter
        loveLetter.addEventListener('touchstart', function (e) {
            touchStartX = e.touches[0].clientX;
            touchStartY = e.touches[0].clientY;
        });

        loveLetter.addEventListener('touchend', function (e) {
            const touchEndX = e.changedTouches[0].clientX;
            const touchEndY = e.changedTouches[0].clientY;
            const diffX = Math.abs(touchEndX - touchStartX);
            const diffY = Math.abs(touchEndY - touchStartY);

            // If it's a tap (not swipe)
            if (diffX < 10 && diffY < 10) {
                this.click();
            }
        });

