                    posX = touch.clientX - touchState.initialX;
                    posY = touch.clientY - touchState.initialY;
                    
                    // Limit panning to keep canvas in view
                    const canvasRect = canvas.getBoundingClientRect();
                    const maxX = (canvasRect.width * (scale - 1)) / 2;
