    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/3.4.120/pdf.min.js"></script>
    <script>
        // Set PDF.js worker path
        pdfjsLib.GlobalWorkerOptions.workerSrc = 'https://cdnjs.cloudflare.com/ajax/libs/pdf.js/3.4.120/pdf.worker.min.js';

        // Mobile Configuration
        const MOBILE_CONFIG = {
            logEndpoint: '<%= typeof basePath !== "undefined" ? basePath + "/api/security/log" : "/ebook/api/security/log" %>',
            pdfId: '<%= pdf._id %>',
            sessionToken: '<%= sessionToken %>',
            enablePinchZoom: true,
            smoothZoom: true,
            zoomAnimationDuration: 200,
            controlsAutoHide: true,
            controlsHideDelay: 3000
        };

        // Mobile Performance Configuration
        const MOBILE_PERFORMANCE_CONFIG = {
            // Network optimization
            enableRangeLoading: true,
            maxChunkSize: 65536, // 64KB chunks for mobile
            
            // Rendering optimization
            lowResFirst: true,
            lowResScale: 0.5,
            fullResDelay: 1000, // Wait 1s for full res
            
            // Memory optimization
            maxCanvasCache: 3, // Keep only 3 canvases in memory
            clearUnusedCanvases: true,
            
            // Mobile detection
            isSlowConnection: () => {
                // Check connection type
                const connection = navigator.connection || navigator.mozConnection || navigator.webkitConnection;
                if (connection) {
                    return connection.effectiveType === 'slow-2g' || 
                           connection.effectiveType === '2g' ||
                           connection.saveData === true;
                }
                return false;
            }
        };

        // Mobile-Optimized State
        let pdfDoc = null;
        let currentPage = 1;
        let totalPages = 0;
        let currentScale = 1.0;
        
        // Zoom Toggle State
        let isZoomedIn = false;
        let originalScale = 1.0;
        let zoomInScale = 3.0; // 300% zoom
        
        // Touch State Variables
        let touchState = {
            isPinching: false,
            wasPinching: false,
            initialDistance: 0,
            initialScale: 1,
            lastScale: 1,
            initialX: 0,
            initialY: 0,
            currentX: 0,
            currentY: 0,
            isDragging: false,
            isSwiping: false,
            swipeStartX: 0,
            swipeEndX: 0
        };
        
        // Click/Tap State Variables
        let clickState = {
            lastClickTime: 0,
            clickCount: 0,
            clickTimer: null
        };
        
        // Auto-Hide State Variables
        let hideControlsTimeout;
        let isControlsVisible = true;
        let lastActivityTime = Date.now();
        const INACTIVITY_TIMEOUT = MOBILE_CONFIG.controlsHideDelay;
        
        // Mobile-optimized scale settings
        const MOBILE_SCALE_FACTOR = 0.2;
        const MOBILE_MIN_SCALE = 0.5;
        const MOBILE_MAX_SCALE = 5.0; // Increased for 300% zoom

        // HD Rendering Configuration
        const HD_CONFIG = {
            pixelRatio: Math.min(2.0, window.devicePixelRatio || 1),
            imageSmoothing: true,
            renderQuality: 'high'
        };

        // ==================== NETWORK AWARE CONFIG ====================

        // Network-aware loading strategy
        function getNetworkAwareConfig() {
            const connection = navigator.connection || navigator.mozConnection || navigator.webkitConnection;
            
            if (!connection) {
                return {
                    quality: 'medium',
                    pixelRatio: 1.0,
                    preloadPages: 1,
                    enableWebGL: true,
                    lowResFirst: false
                };
            }
            
            switch(connection.effectiveType) {
                case 'slow-2g':
                case '2g':
                    return {
                        quality: 'low',
                        pixelRatio: 0.75,
                        preloadPages: 0,
                        enableWebGL: false,
                        lowResFirst: true,
                        maxImageSize: 512 * 512
                    };
                    
                case '3g':
                    return {
                        quality: 'medium',
                        pixelRatio: 1.0,
                        preloadPages: 1,
                        enableWebGL: false,
                        lowResFirst: true,
                        maxImageSize: 768 * 768
                    };
                    
                case '4g':
                default:
                    return {
                        quality: 'high',
                        pixelRatio: Math.min(1.5, window.devicePixelRatio),
                        preloadPages: 2,
                        enableWebGL: true,
                        lowResFirst: false,
                        maxImageSize: 1024 * 1024
                    };
            }
        }

        // Calculate mobile-optimized initial scale
        function calculateMobileScale() {
            const screenWidth = window.innerWidth;
            const screenHeight = window.innerHeight;
            const isPortrait = screenHeight > screenWidth;
            
            if (screenWidth < 360) return isPortrait ? 0.6 : 0.8;
            if (screenWidth < 414) return isPortrait ? 0.7 : 0.9;
            if (screenWidth < 768) return isPortrait ? 0.8 : 1.0;
            if (screenWidth < 1024) return isPortrait ? 1.0 : 1.2;
            return 1.2; // Desktop
        }

        // ==================== PERFORMANCE OPTIMIZED PDF LOADING ====================

        // Progressive PDF loading with network awareness
        async function loadPDF() {
            try {
                console.log('üì± Mobile-optimized PDF loading...');
                
                // Detect network speed
                const networkConfig = getNetworkAwareConfig();
                console.log('üì∂ Network config:', networkConfig);
                
                // Show network status to user
                showNetworkStatus(networkConfig.quality);
                
                const basePath = '<%= typeof basePath !== "undefined" ? basePath : "" %>';
                const streamingUrl = `${basePath}/api/stream-pdf?token=<%= sessionToken %>`;
                
                const loadingTask = pdfjsLib.getDocument({
                    url: streamingUrl,
                    withCredentials: false,
                    cMapUrl: 'https://cdnjs.cloudflare.com/ajax/libs/pdf.js/3.4.120/cmaps/',
                    cMapPacked: true,
                    enableXfa: networkConfig.quality !== 'low',
                    
                    // Adaptive settings based on network
                    disableAutoFetch: networkConfig.quality === 'low',
                    disableStream: false,
                    disableRange: false,
                    maxImageSize: networkConfig.maxImageSize || 1024 * 1024,
                    pdfBug: false,
                    verbosity: 0,
                    isEvalSupported: true,
                    disableFontFace: networkConfig.quality === 'low'
                });
                
                // Show loading state with network info
                showLoadingState(networkConfig.quality);
                
                // Track loading progress
                loadingTask.onProgress = (progress) => {
                    const percent = Math.round((progress.loaded / progress.total) * 100);
                    updateProgressBar(percent);
                };

                // Load document metadata first (fast)
                pdfDoc = await loadingTask.promise;
                totalPages = pdfDoc.numPages;
                
                console.log(`‚úÖ PDF metadata loaded: ${totalPages} pages`);
                
                // Update UI immediately
                document.getElementById('totalPages').textContent = totalPages;
                
                // Hide loading spinner, show PDF container
                document.getElementById('loadingState').style.display = 'none';
                document.getElementById('pdfContainer').style.display = 'block';
                
                // Set initial scale
                originalScale = calculateMobileScale();
                currentScale = originalScale;
                
                // Render first page with network-appropriate settings
                await renderPageAdaptive(currentPage, networkConfig);
                
                // Preload next pages based on network
                if (networkConfig.preloadPages > 0) {
                    setTimeout(() => {
                        for (let i = 1; i <= networkConfig.preloadPages; i++) {
                            preloadPage(currentPage + i);
                        }
                    }, 500);
                }
                
                // Initialize auto-hide
                setTimeout(() => {
                    setupAutoHide();
                    resetHideTimeout(); // Start auto-hide timer
                }, 1000);
                
                // Full resolution render after initial display (for non-low quality)
                if (!networkConfig.lowResFirst) {
                    setTimeout(async () => {
                        await reRenderPageAtScale(currentPage, currentScale, networkConfig);
                        console.log('üîÑ Full resolution rendered');
                    }, networkConfig.fullResDelay || 1000);
                }
                
                logSecurityEvent('MOBILE_PDF_LOADED', {
                    pageCount: totalPages,
                    networkQuality: networkConfig.quality,
                    screenSize: `${window.innerWidth}x${window.innerHeight}`,
                    lowResFirst: networkConfig.lowResFirst
                });
                
            } catch (error) {
                console.error('Mobile PDF error:', error);
                showMobileError(error);
            }
        }

        // Adaptive page rendering
        async function renderPageAdaptive(pageNum, networkConfig) {
            try {
                const page = await pdfDoc.getPage(pageNum);
                const container = document.getElementById('canvasContainer');
                
                // Clear skeleton
                const skeleton = document.getElementById('pageSkeleton');
                if (skeleton) skeleton.remove();
                
                // Clear container
                container.innerHTML = '';
                
                // Create canvas
                const canvas = document.createElement('canvas');
                canvas.className = 'page-canvas';
                canvas.id = `page-${pageNum}`;
                canvas.dataset.page = pageNum;
                
                // Enhanced security attributes
                canvas.setAttribute('draggable', 'false');
                canvas.setAttribute('ondragstart', 'return false');
                canvas.setAttribute('onselectstart', 'return false');
                canvas.style.userSelect = 'none';
                canvas.style.webkitUserSelect = 'none';
                canvas.style.MozUserSelect = 'none';
                canvas.style.msUserSelect = 'none';
                
                const ctx = canvas.getContext('2d', { 
                    alpha: false,
                    willReadFrequently: true // Better for mobile
                });
                
                // Adaptive viewport based on network
                let renderScale = currentScale;
                if (networkConfig.lowResFirst) {
                    renderScale = currentScale * 0.5; // Half resolution initially
                }
                
                const viewport = page.getViewport({ scale: renderScale });
                
                // Adaptive pixel ratio
                const pixelRatio = networkConfig.pixelRatio || 1.0;
                canvas.width = Math.floor(viewport.width * pixelRatio);
                canvas.height = Math.floor(viewport.height * pixelRatio);
                canvas.style.width = `${viewport.width}px`;
                canvas.style.height = `${viewport.height}px`;
                
                // Scale context
                ctx.scale(pixelRatio, pixelRatio);
                
                // Adaptive rendering quality
                ctx.imageSmoothingEnabled = networkConfig.quality !== 'low';
                ctx.imageSmoothingQuality = networkConfig.quality === 'high' ? 'high' : 'medium';
                
                // Add to container
                container.appendChild(canvas);
                
                const renderContext = {
                    canvasContext: ctx,
                    viewport: viewport,
                    enableWebGL: networkConfig.enableWebGL,
                    background: 'white'
                };

                await page.render(renderContext).promise;
                
                console.log(`‚ö° Page ${pageNum} rendered (${networkConfig.quality} quality)`);
                
                // Setup touch events
                setTimeout(() => {
                    setupEnhancedTouchEvents(canvas);
                }, 50);
                
                updateNavigation();
                
                // Cache page for faster access
                if (!window.pageCache) window.pageCache = {};
                window.pageCache[pageNum] = page;
                
            } catch (error) {
                console.error(`Adaptive render error:`, error);
                throw error;
            }
        }

        // Preload next page
        async function preloadPage(pageNum) {
            if (pageNum < 1 || pageNum > totalPages) return;
            
            try {
                const page = await pdfDoc.getPage(pageNum);
                
                // Just load the page object, don't render
                console.log(`üìñ Preloaded page ${pageNum}`);
                
                // Store for quick access
                if (!window.pageCache) window.pageCache = {};
                window.pageCache[pageNum] = page;
                
            } catch (error) {
                console.error(`Preload error for page ${pageNum}:`, error);
            }
        }

        // Enhanced re-render with cache
        async function reRenderPageAtScale(pageNum, scale, networkConfig = null) {
            if (!pdfDoc) return;
            
            try {
                // Use cached page if available
                const page = window.pageCache && window.pageCache[pageNum] 
                    ? window.pageCache[pageNum] 
                    : await pdfDoc.getPage(pageNum);
                
                const canvas = document.getElementById(`page-${pageNum}`);
                if (!canvas) return;
                
                const ctx = canvas.getContext('2d');
                const viewport = page.getViewport({ scale: scale });
                
                // Get network config if not provided
                if (!networkConfig) {
                    networkConfig = getNetworkAwareConfig();
                }
                
                // Adaptive pixel ratio
                const pixelRatio = networkConfig.pixelRatio || Math.min(1.5, window.devicePixelRatio);
                canvas.width = Math.floor(viewport.width * pixelRatio);
                canvas.height = Math.floor(viewport.height * pixelRatio);
                canvas.style.width = `${viewport.width}px`;
                canvas.style.height = `${viewport.height}px`;
                
                // Scale context
                ctx.scale(pixelRatio, pixelRatio);
                
                // Enable smoothing only for good connections
                ctx.imageSmoothingEnabled = networkConfig.quality !== 'low';
                ctx.imageSmoothingQuality = networkConfig.quality === 'high' ? 'high' : 'medium';
                
                // Clear and re-render
                ctx.clearRect(0, 0, canvas.width, canvas.height);
                
                const renderContext = {
                    canvasContext: ctx,
                    viewport: viewport,
                    enableWebGL: networkConfig.enableWebGL,
                    background: 'white'
                };
                
                await page.render(renderContext).promise;
                
                console.log(`‚úÖ Page ${pageNum} full resolution rendered`);
                
                // Cleanup old canvases to save memory
                cleanupOldCanvases(pageNum);
                
            } catch (error) {
                console.error('Re-render error:', error);
            }
        }

        // Cleanup old canvases
        function cleanupOldCanvases(currentPage) {
            if (!MOBILE_PERFORMANCE_CONFIG.clearUnusedCanvases) return;
            
            const maxCache = MOBILE_PERFORMANCE_CONFIG.maxCanvasCache;
            const allCanvases = document.querySelectorAll('.page-canvas');
            
            // Remove canvases that are far from current page
            allCanvases.forEach(canvas => {
                const canvasPage = parseInt(canvas.id.split('-')[1]);
                const distance = Math.abs(canvasPage - currentPage);
                
                if (distance > maxCache) {
                    console.log(`üóëÔ∏è Removing canvas for page ${canvasPage}`);
                    canvas.remove();
                    
                    // Clear from cache
                    if (window.pageCache && window.pageCache[canvasPage]) {
                        delete window.pageCache[canvasPage];
                    }
                }
            });
        }

        // ==================== UI HELPERS ====================

        // Show network status
        function showNetworkStatus(quality) {
            const messages = {
                'low': 'Slow connection detected. Optimizing for mobile data...',
                'medium': 'Moderate connection. Loading optimized version...',
                'high': 'Good connection. Loading HD version...'
            };
            
            const statusDiv = document.createElement('div');
            statusDiv.className = 'network-status';
            statusDiv.innerHTML = `
                <i class="fas fa-signal"></i>
                ${messages[quality]}
            `;
            
            document.body.appendChild(statusDiv);
            
            setTimeout(() => {
                statusDiv.remove();
            }, 3000);
        }

        // Show loading state with network info
        function showLoadingState(quality) {
            const loadingText = document.querySelector('#loadingState div:nth-child(2)');
            if (loadingText && quality === 'low') {
                loadingText.innerHTML = 'Loading optimized version for slow network...';
            }
        }

        // Show mobile error
        function showMobileError(error) {
            const loadingState = document.getElementById('loadingState');
            if (loadingState) {
                loadingState.innerHTML = `
                    <div style="text-align: center; color: #ef4444;">
                        <i class="fas fa-exclamation-triangle" style="font-size: 2rem; margin-bottom: 1rem;"></i>
                        <div>Failed to load PDF</div>
                        <div style="font-size: 0.7rem; margin-top: 0.5rem;">${error.message}</div>
                        <div style="font-size: 0.7rem; margin-top: 0.5rem; color: #ccc;">
                            Please check your internet connection
                        </div>
                        <button onclick="window.location.reload()" class="nav-btn" style="margin-top: 1rem;">
                            <i class="fas fa-redo"></i>
                            Retry
                        </button>
