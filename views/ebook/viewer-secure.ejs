            document.addEventListener('contextmenu', (e) => {
                e.preventDefault();
                showSecurityWarning('Right-click disabled');
                logSecurityEvent('CONTEXT_MENU_BLOCKED');
            });

            document.addEventListener('selectstart', (e) => {
                e.preventDefault();
            });

            // Prevent screenshot on some mobile devices
            document.body.style.webkitUserSelect = 'none';
            document.body.style.webkitTouchCallout = 'none';

            // Handle mobile-specific security
            document.addEventListener('touchmove', (e) => {
                if (e.scale !== 1) {
                    e.preventDefault();
                }
            }, { passive: false });

            // Prevent drag and drop
            document.addEventListener('dragstart', (e) => {
                e.preventDefault();
                return false;
            });

            console.log('‚úÖ Mobile security initialized');
        }

        // Mobile-optimized security warning
        function showSecurityWarning(message) {
            const warning = document.getElementById('securityWarning');
            if (warning) {
                warning.innerHTML = `<i class="fas fa-shield-alt"></i> ${message}`;
                warning.style.display = 'block';
                
                setTimeout(() => {
                    warning.style.display = 'none';
                }, 2000);
            }
        }

        // Mobile-optimized logging
        function logSecurityEvent(eventType, details = {}) {
            console.log(`üì± Security: ${eventType}`, details);
            
            // Send log to server
            if (MOBILE_CONFIG.logEndpoint) {
                fetch(MOBILE_CONFIG.logEndpoint, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        eventType,
                        pdfId: MOBILE_CONFIG.pdfId,
                        details: {
                            ...details,
                            userAgent: navigator.userAgent,
                            isMobile: true,
                            screenSize: `${window.innerWidth}x${window.innerHeight}`,
                            timestamp: new Date().toISOString()
                        }
                    })
                }).catch(error => {
                    console.error('Mobile log failed:', error);
                });
            }
        }

        // ==================== ZOOM FUNCTIONS ====================

        // Enhanced zoom functions with smooth animations
        async function zoomIn() {
            if (currentScale < MOBILE_MAX_SCALE) {
                const canvas = document.getElementById(`page-${currentPage}`);
                if (canvas) {
                    // Reset double click state
                    isZoomedIn = false;
                    
                    // Smooth zoom animation
                    canvas.style.transition = 'transform 0.2s ease-out';
                    currentScale = Math.min(currentScale + MOBILE_SCALE_FACTOR, MOBILE_MAX_SCALE);
                    canvas.style.transform = `scale(${currentScale})`;
                    
                    setTimeout(async () => {
                        canvas.style.transition = '';
                        canvas.style.transform = '';
                        await reRenderPageAtScale(currentPage, currentScale);
                        updateZoomLevel();
                        showControlsTemporarily();
                    }, 200);
                    
                    logSecurityEvent('MOBILE_ZOOM_IN', { 
                        scale: currentScale,
                        hd: true 
                    });
                }
            }
        }

        async function zoomOut() {
            if (currentScale > MOBILE_MIN_SCALE) {
                const canvas = document.getElementById(`page-${currentPage}`);
                if (canvas) {
                    // Reset double click state
                    isZoomedIn = false;
                    
                    // Smooth zoom animation
                    canvas.style.transition = 'transform 0.2s ease-out';
                    currentScale = Math.max(currentScale - MOBILE_SCALE_FACTOR, MOBILE_MIN_SCALE);
                    canvas.style.transform = `scale(${currentScale})`;
                    
                    setTimeout(async () => {
                        canvas.style.transition = '';
                        canvas.style.transform = '';
                        await reRenderPageAtScale(currentPage, currentScale);
                        updateZoomLevel();
                        showControlsTemporarily();
                    }, 200);
                    
                    logSecurityEvent('MOBILE_ZOOM_OUT', { 
                        scale: currentScale,
                        hd: true 
                    });
                }
            }
        }

        async function zoomReset() {
            const canvas = document.getElementById(`page-${currentPage}`);
            if (canvas) {
                // Reset double click state
                isZoomedIn = false;
                
                // Smooth reset animation
                canvas.style.transition = 'transform 0.3s ease-out';
                currentScale = originalScale;
                canvas.style.transform = `scale(${currentScale})`;
                
                setTimeout(async () => {
                    canvas.style.transition = '';
                    canvas.style.transform = '';
                    await reRenderPageAtScale(currentPage, currentScale);
                    updateZoomLevel();
                    showControlsTemporarily();
                }, 300);
                
                logSecurityEvent('MOBILE_ZOOM_RESET');
            }
        }

        function updateZoomLevel() {
            const zoomLevelElement = document.getElementById('zoomLevel');
            if (zoomLevelElement) {
                zoomLevelElement.textContent = `${Math.round(currentScale * 100)}%`;
            }
        }

        // ==================== PAGE NAVIGATION ====================

        // Mobile navigation
        function updateNavigation() {
            const prevBtn = document.getElementById('prevPage');
            const nextBtn = document.getElementById('nextPage');
            
            if (prevBtn) prevBtn.disabled = currentPage <= 1;
            if (nextBtn) nextBtn.disabled = currentPage >= totalPages;
            
            // Update page info styling based on state
            const pageInfo = document.querySelector('.page-info');
            if (pageInfo) {
                if (currentPage === 1) {
                    pageInfo.style.background = 'rgba(59, 130, 246, 0.2)';
                } else if (currentPage === totalPages) {
                    pageInfo.style.background = 'rgba(239, 68, 68, 0.2)';
                } else {
                    pageInfo.style.background = 'rgba(255, 255, 255, 0.1)';
                }
            }
        }

        // Go to specific page function
        async function goToPage(pageNum) {
            if (pageNum >= 1 && pageNum <= totalPages && pageNum !== currentPage) {
                currentPage = pageNum;
                await renderPageAdaptive(currentPage, getNetworkAwareConfig());
                document.getElementById('currentPage').textContent = currentPage;
                updateNavigation();
                showControlsTemporarily();
                logSecurityEvent('MOBILE_PAGE_JUMP', { page: pageNum });
            }
        }

        async function goToPreviousPage() {
            if (currentPage > 1) {
                currentPage--;
                await renderPageAdaptive(currentPage, getNetworkAwareConfig());
                document.getElementById('currentPage').textContent = currentPage;
                updateNavigation();
                showControlsTemporarily();
                logSecurityEvent('MOBILE_PAGE_PREV');
            }
        }

        async function goToNextPage() {
            if (currentPage < totalPages) {
                currentPage++;
                await renderPageAdaptive(currentPage, getNetworkAwareConfig());
                document.getElementById('currentPage').textContent = currentPage;
                updateNavigation();
                showControlsTemporarily();
                logSecurityEvent('MOBILE_PAGE_NEXT');
            }
        }

        // ==================== BACK BUTTON ====================

        // Back button functionality
        function setupBackButton() {
            const backButton = document.getElementById('backButton');
            if (backButton) {
                const basePath = '<%= typeof basePath !== "undefined" ? basePath : "/ebook" %>';
                
                backButton.addEventListener('click', function() {
                    console.log('Back button clicked');
                    window.location.href = basePath;
                });
                
                // Touch events ke liye bhi
                backButton.addEventListener('touchend', function(e) {
                    e.preventDefault();
                    console.log('Back button touched');
                    window.location.href = basePath;
                });
            }
        }

        // ==================== EVENT LISTENERS ====================

        // Mobile event listeners setup
        function setupEventListeners() {
            // Page navigation
            const nextPageBtn = document.getElementById('nextPage');
            const prevPageBtn = document.getElementById('prevPage');
            
            if (nextPageBtn) nextPageBtn.addEventListener('click', goToNextPage);
            if (prevPageBtn) prevPageBtn.addEventListener('click', goToPreviousPage);
            
            // Zoom controls
            const zoomInBtn = document.getElementById('zoomIn');
            const zoomOutBtn = document.getElementById('zoomOut');
            const zoomResetBtn = document.getElementById('zoomReset');
            
            if (zoomInBtn) zoomInBtn.addEventListener('click', zoomIn);
            if (zoomOutBtn) zoomOutBtn.addEventListener('click', zoomOut);
            if (zoomResetBtn) zoomResetBtn.addEventListener('click', zoomReset);
            
            // Mobile-optimized touch events for buttons
            document.querySelectorAll('.nav-btn, .zoom-btn, .back-btn').forEach(btn => {
                btn.addEventListener('touchstart', (e) => {
                    e.currentTarget.style.transform = 'scale(0.95)';
                });
                
                btn.addEventListener('touchend', (e) => {
                    e.currentTarget.style.transform = 'scale(1)';
                });
            });
            
            // Double click zone visibility
            const pdfContainer = document.getElementById('pdfContainer');
            const doubleClickZone = document.getElementById('doubleClickZone');
            
            if (pdfContainer && doubleClickZone) {
                // Show double click zone when controls are hidden
                pdfContainer.addEventListener('mouseenter', () => {
                    if (!isControlsVisible) {
                        pdfContainer.classList.add('show-double-click-zone');
                    }
                });
                
                pdfContainer.addEventListener('mouseleave', () => {
                    pdfContainer.classList.remove('show-double-click-zone');
                });
                
                // Touch events for mobile
                pdfContainer.addEventListener('touchstart', () => {
                    if (!isControlsVisible) {
                        pdfContainer.classList.add('show-double-click-zone');
                        setTimeout(() => {
                            pdfContainer.classList.remove('show-double-click-zone');
                        }, 2000);
                    }
                });
            }
            
            // Debug toggle button
            const debugToggle = document.getElementById('debugToggle');
            if (debugToggle) {
                debugToggle.addEventListener('click', () => {
                    toggleControls();
                });
            }
        }

        // ==================== INITIALIZATION ====================

        // Mobile initialization
        document.addEventListener('DOMContentLoaded', async () => {
            try {
                console.log('üì± HD Mobile Reader Initializing...');
                
                // Show PDF skeleton immediately for instant feedback
                showPDFSkeleton();
                
                // Set initial zoom state
                originalScale = calculateMobileScale();
                currentScale = originalScale;
                
                // Test touch capabilities
                testTouchCapabilities();
                
                // Initialize all systems
                initializeMobileSecurity();
                setupKeyboardNavigation();
                setupFocusManagement();
                setupBackButton();
                setupEventListeners();
                
                // Load PDF
                await loadPDF();
                
                // Update UI
                updateNavigation();
                updateZoomLevel();
                updateButtonTooltips();
                
                // Performance monitoring
                monitorPerformance();
                
                console.log('‚úÖ HD Mobile Reader Ready!');
                
            } catch (error) {
                console.error('‚ùå Mobile init error:', error);
                showSecurityWarning('Failed to initialize');
            }
        });

        // Mobile resize handling with HD optimization
        let mobileResizeTimeout;
        window.addEventListener('resize', () => {
            clearTimeout(mobileResizeTimeout);
            mobileResizeTimeout = setTimeout(() => {
                if (pdfDoc) {
                    originalScale = calculateMobileScale();
                    if (!isZoomedIn) {
                        currentScale = originalScale;
                        renderPageAdaptive(currentPage, getNetworkAwareConfig());
                    }
                }
            }, 250);
        });

        // Mobile cleanup
        window.addEventListener('beforeunload', () => {
            if (pdfDoc) {
                pdfDoc.destroy().catch(() => {});
            }
            clearTimeout(hideControlsTimeout);
            
            // Log user exit
            logSecurityEvent('USER_EXIT', {
                lastPage: currentPage,
                sessionDuration: Date.now() - lastActivityTime
            });
        });

        // Offline detection
        window.addEventListener('offline', () => {
            showSecurityWarning('You are offline');
        });

        // Online detection
        window.addEventListener('online', () => {
            showSecurityWarning('Connection restored');
        });

        // Go back function for error handling
        window.goBack = function() {
            const basePath = '<%= typeof basePath !== "undefined" ? basePath : "/ebook" %>';
            window.location.href = basePath;
        };

        // Service Worker for PWA
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                navigator.serviceWorker.register('/sw.js').catch(error => {
                    console.log('Service Worker registration failed:', error);
                });
            });
        }

        // Test touch capabilities
        function testTouchCapabilities() {
            const hasTouch = 'ontouchstart' in window || navigator.maxTouchPoints > 0;
            
            console.log(`üì± Touch capabilities:`, {
                hasTouch,
                maxTouchPoints: navigator.maxTouchPoints || 0,
                userAgent: navigator.userAgent,
                platform: navigator.platform
            });
            
            if (!hasTouch) {
                console.warn('Device may not support touch gestures');
                const gestureHint = document.getElementById('gestureHint');
                if (gestureHint) gestureHint.style.display = 'none';
            }
            
            return hasTouch;
        }

        // Performance monitoring
        function monitorPerformance() {
            const perfEntries = performance.getEntriesByType('navigation');
            if (perfEntries.length > 0) {
                const navEntry = perfEntries[0];
                console.log('üìä Performance metrics:', {
                    'DOM Load': navEntry.domContentLoadedEventEnd - navEntry.domContentLoadedEventStart,
                    'Page Load': navEntry.loadEventEnd - navEntry.loadEventStart,
                    'First Paint': performance.getEntriesByName('first-paint')[0]?.startTime,
                    'First Contentful Paint': performance.getEntriesByName('first-contentful-paint')[0]?.startTime
                });
            }
        }

        // ==================== PRINT PROTECTION ====================

        // Enhanced Print Protection
        function setupPrintProtection() {
            console.log('üõ°Ô∏è Enhanced print protection initialized');
            
            // Before print event
            window.addEventListener('beforeprint', (event) => {
                event.preventDefault();
                showPrintWarning();
                logSecurityEvent('PRINT_ATTEMPT_BLOCKED', {
                    method: 'beforeprint',
                    timestamp: new Date().toISOString()
                });
                return false;
            });
            
            // After print event
            window.addEventListener('afterprint', (event) => {
                event.preventDefault();
                closePrintWarning();
                logSecurityEvent('PRINT_DIALOG_CLOSED');
                return false;
            });
            
            // Override print function
            window.print = function() {
                showPrintWarning();
                logSecurityEvent('PRINT_FUNCTION_OVERRIDE');
                return false;
            };
            
            // Catch print key combinations
            document.addEventListener('keydown', (e) => {
                if ((e.ctrlKey || e.metaKey) && (e.key === 'p' || e.key === 'P')) {
                    e.preventDefault();
                    showPrintWarning();
                    logSecurityEvent('PRINT_SHORTCUT_BLOCKED', { key: e.key });
                    return false;
                }
            });
            
            // Monitor for print media queries
            const printMediaQuery = window.matchMedia('print');
            printMediaQuery.addListener((mq) => {
                if (mq.matches) {
                    showPrintWarning();
                    logSecurityEvent('PRINT_MEDIA_QUERY_DETECTED');
                }
            });
        }

        function showPrintWarning() {
            const warning = document.getElementById('printWarning');
            if (warning) {
                warning.style.display = 'flex';
                
                // Auto-hide after 5 seconds
                setTimeout(() => {
                    closePrintWarning();
                }, 5000);
            }
        }

        function closePrintWarning() {
            const warning = document.getElementById('printWarning');
            if (warning) {
                warning.style.display = 'none';
            }
        }
    </script>
