<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>RID Research Library | Login</title>
    <!-- Font Awesome 6 & Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link  href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap"  rel="stylesheet"  />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" /> 
    <link rel="stylesheet" href="/css/Research-paper/login.css">
  </head>
  <body>
    <div class="login-card">
      <div class="card-header">
        <div class="library-badge">
          <div class="rid-logo">
            <i class="fas fa-landmark"></i>
          </div>
          <div class="rid-text"><span>RID</span> Research Library</div>
        </div>
        <h2>Welcome Back</h2>
        <p>Access your research account</p>
      </div>

      <!-- Welcome message with dynamic touch -->
      <div class="welcome-message">
        <i class="fas fa-smile-wink"></i>
        <span>Good to see you again, researcher!</span>
      </div>

      <form action="login.php" method="post">
        <!-- Email -->
        <div class="input-group">
          <i class="fas fa-envelope"></i>
          <input
            type="email"
            id="email"
            name="email"
            placeholder="Email address"
            required
          />
        </div>

        <!-- Password -->
        <div class="input-group">
          <i class="fas fa-lock"></i>
          <input
            type="password"
            id="password"
            name="password"
            placeholder="Password"
            required
          />
        </div>

        <!-- Remember me & Forgot password -->
        <div class="login-options">
          <div class="remember-me">
            <input type="checkbox" id="remember" name="remember" />
            <label for="remember">Remember me</label>
          </div>
          <a href="#" class="forgot-link">Forgot password?</a>
        </div>

        <!-- Login button -->
      <button type="submit" class="btn-primary">
          <span>Login to Library</span>
          <i class="fas fa-arrow-right"></i>
        </button>
      </form>

      <!-- OR Divider -->
      <div class="divider">
        <span class="divider-line"></span>
        <span>OR</span>
        <span class="divider-line"></span>
      </div>

      <!-- Social login options (academic focused) -->
      <div class="social-login">
        <button class="social-btn google">
           <i class="fas fa-arrow-right"></i>
          <span> Continue with Google </span>
        </button>
      </div>

      <!-- Signup link -->
      <div class="signup-link">
        New to RID Research Library?
        <a href="/research-create" ><i class="fas fa-user-plus"></i> Create account</a >
      </div>
    </div>
  </body>
</html>