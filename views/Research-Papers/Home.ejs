      // Clear all stars (remove gold color)
      function clearStars() {
        stars.forEach((star) => {
          star.classList.remove("active");
          star.classList.remove("selected");
          star.style.color = "#aaa"; // default gray
        });
      }

      // Set stars to gold up to the selected rating
      function setStarsGold(rating) {
        for (let i = 0; i < rating; i++) {
          stars[i].classList.add("active");
          stars[i].classList.add("selected");
          stars[i].style.color = "#FFD700"; // gold
        }
      }

      // Star click event
      stars.forEach((star) => {
        star.addEventListener("click", function () {
          selectedRating = parseInt(this.getAttribute("data-rating"));
          clearStars();
          setStarsGold(selectedRating);
          submitBtn.disabled = false;
        });

        // Optional: hover effect
        star.addEventListener("mouseenter", function () {
          const hoverRating = parseInt(this.getAttribute("data-rating"));
          clearStars();
          for (let i = 0; i < hoverRating; i++) {
            stars[i].style.color = "#FFD700";
          }
        });

        star.addEventListener("mouseleave", function () {
          clearStars();
          if (selectedRating > 0) {
            setStarsGold(selectedRating);
          }
        });
      });

      // Submit rating
      submitBtn.addEventListener("click", function () {
        if (selectedRating > 0) {
          totalRatings++;
          ratingCount.textContent = totalRatings;
          submitBtn.disabled = true;
          thankYouMsg.style.display = "block";
          setTimeout(() => {
            thankYouMsg.style.display = "none";
          }, 3000);
        }
      });
    </script>
  </body>
</html>
